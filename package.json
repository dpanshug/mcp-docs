{
  "name": "@dpanshug/mcp-docs",
  "version": "1.0.0",
  "description": "MCP server for documentation integration with Cursor IDE - supports local and online documentation with real-time search",
  "main": "build/index.js",
  "type": "module",
  "bin": {
    "mcp-docs": "./build/index.js"
  },
  "files": [
    "build/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "tsx src/index.ts",
    "test": "npm run build && node test-mcp-server.js",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "fast-glob": "^3.3.2",
    "gray-matter": "^4.0.3",
    "marked": "^14.1.2",
    "fs-extra": "^11.2.0",
    "chokidar": "^4.0.1",
    "node-fetch": "^3.3.2",
    "cheerio": "^1.0.0",
    "turndown": "^7.1.2"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@types/fs-extra": "^11.0.4",
    "@types/turndown": "^5.0.4",
    "typescript": "^5.6.0",
    "tsx": "^4.19.2"
  },
  "keywords": [
    "mcp",
    "documentation", 
    "cursor",
    "ai",
    "model-context-protocol",
    "search",
    "docs",
    "markdown",
    "online-docs"
  ],
  "author": "Dipanshu Gupta",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dpanshug/mcp-docs.git"
  },
  "bugs": {
    "url": "https://github.com/dpanshug/mcp-docs/issues"
  },
  "homepage": "https://github.com/dpanshug/mcp-docs#readme",
  "engines": {
    "node": ">=18.0.0"
  }
} 